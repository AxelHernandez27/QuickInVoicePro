<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/clientesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTituloClientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customers"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Add Customer Button Modern Style -->
        <ImageButton
            android:id="@+id/btnAgregarCliente"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_green_rounded"
            android:src="@drawable/add"
            android:contentDescription="Agregar cliente"
            android:scaleType="centerInside"
            android:elevation="4dp"/>


        <!-- Search Field -->
        <EditText
            android:id="@+id/buscarCliente"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/input_background"
            android:hint="Search"
            android:inputType="text"
            android:paddingStart="40dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:textColor="#000000"
            android:textColorHint="#999999" />

        <!-- Customer List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerClientes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            tools:itemCount="3"
            tools:listitem="@layout/item_customer" />

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:itemIconTint="@color/selector_nav"
            app:itemTextColor="@color/selector_nav"
            app:menu="@menu/bottom_nav_menu"
            app:labelVisibilityMode="labeled"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
